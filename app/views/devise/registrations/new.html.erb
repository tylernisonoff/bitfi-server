  <body>
	<div class="container">
	    <div class="block reg form-signin">
<h2 class="form-signin-heading">Sign up</h2>
	    	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name, mac_address: params[:mac_address])) do |f| %>
  				  <%= devise_error_messages! %>

  				<div><%= f.email_field :email, :autofocus => true, :placeholder => "Email address", class: "form-control" %></div>

  				<div><%= f.password_field :password,  :placeholder => "Password", class: "form-control" %></div>
  				<div><%= f.password_field :password_confirmation, :placeholder => "Password confirmation", class: "form-control" %></div>

	    	
				<div><%= f.hidden_field :tetherer_id, value: params[:tetherer_id].to_i %><br /></div>
				<div><%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block regz" %></div>

				<%= render "devise/shared/links" %>
			<% end %>

</div>
    </div> <!-- /container -->
  </body>